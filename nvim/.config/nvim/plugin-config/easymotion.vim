" I use colemak and remapped the easymotion keys to my home row
let g:EasyMotion_keys = 'arstneioqwfpluydhgjv'

" Easymotion back and forth on current line
map <Leader><Leader>l <Plug>(easymotion-lineforward)
map <Leader><Leader>h <Plug>(easymotion-linebackward)

" Easymotion up and down columns
map <Leader><Leader>j <Plug>(easymotion-j)
map <Leader><Leader>k <Plug>(easymotion-k)
